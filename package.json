{
	"name": "@mercury-pubsub/react",
	"version": "2.0.2",
	"description": "",
	"keywords": ["publish", "subscribe", "real time", "serverless"],
	"author": "Tanguy Michardi√®re",
	"license": "MIT",
	"main": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./index.d.mts",
				"default": "./index.mjs"
			},
			"require": {
				"types": "./index.d.ts",
				"default": "./index.js"
			}
		}
	},
	"scripts": {
		"update-dependencies": "sh scripts/update-dependencies.sh",
		"format": "biome format --write .",
		"lint": "biome ci --error-on-warnings .",
		"check-types": "tsc",
		"check-dead-code": "knip",
		"quality": "pnpm run lint && pnpm run check-types && pnpm run check-dead-code && pnpm run build",
		"build": "tsup && cp package.json dist"
	},
	"dependencies": {
		"@mercury-pubsub/subscriber": "2.0.2",
		"tslib": "2"
	},
	"peerDependencies": {
		"react": "18"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@mercury-pubsub/types": "2.0.1",
		"@swc/core": "1.7.14",
		"@total-typescript/ts-reset": "0.5.1",
		"@types/react": "18.3.4",
		"knip": "5.27.3",
		"npm-check-updates": "17.1.0",
		"tsup": "8.2.4",
		"typescript": "5.5.4"
	}
}
